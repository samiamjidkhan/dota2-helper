{
    "version": 2,
    "builds": [
      {
        "src": "./server.js",
        "use": "@vercel/node",
        "config": { "maxDuration": 60 }
      },
      {
        "src": "/images/**",
        "use": "@vercel/static"
      },
       {
        "src": "*.html",
        "use": "@vercel/static"
      },
       {
        "src": "*.css",
        "use": "@vercel/static"
      },
       {
        "src": "*.js",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server.js"
      },
      { 
        "src": "/images/(.*)", 
        "dest": "/images/$1" 
      },
      { 
        "src": "/(.*\\.css)", 
        "dest": "/$1" 
      },
      { 
        "src": "/(.*\\.js)", 
        "dest": "/$1" 
      },
       {
        "src": "/(.*\\.png)", 
        "dest": "/$1" 
      },
      {
        "src": "/(.*\\.ico)",
        "dest": "/$1"
      },
      {
        "src": "/",
        "dest": "/index.html"
      },
       { 
        "src": "/(.*)", 
        "dest": "/index.html" 
      }
    ]
  }